{
  "name": "backend",
  "version": "1.0.0",
  "description": "A backend part for lap-3 LFA project",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "test": "jest --clearCache && jest --coverage",
    "dev": "nodemon index.js",
    "setup_db": "echo $(docker run -d -p 27017:27017 --name space_dungeons -e MONGO_INITDB_DATABASE=space_db mongo) > /dev/null",
    "mongosh": "echo $(docker exec -it space_dungeons bash -c 'mongosh space_db') > /dev/null",
    "clean_db": "echo $(docker stop space_dungeons && docker rm space_dungeons) > /dev/null"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/mongoose": "^5.11.97",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "mongodb": "^6.0.0",
    "node-cron": "^3.0.2"
  }
}
